{{#each flashMessages.queue as |flash|}}
  {{flash-message flash=flash}}
{{/each}}

<div class=" Absolute-Center is-Responsive">

  <div class="card">
    <div class="card-header">
      <i class="fa fa-sign-in"></i>
      Please Login
    </div>
    <div class="card-block">
      <form accept-charset="UTF-8" role="form" {{action "login" on="submit"}}>
        <fieldset>
          <div class="form-group">
            {{input type="text" value=email placeholder="email" class="form-control"}}
          </div>
          <div class="form-group">
            {{input type="password" value=password placeholder="password" class="form-control"}}
          </div>


          <input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
          {{#link-to "signup"}}Are you new ? Please Sign Up{{/link-to}}
        </fieldset>
      </form>
    </div>
  </div>
</div>
